# this program will calculate the molarity, moles, or volume

# create a menu

print("1. Calculate molarity")
print("")
print("2. Calculate moles")
print("")
print("3. Calculate volume")
print("")

# ask user what they want

userInput = input("Please enter the number corresponding to what you would like to calculate: ")

if userInput == '1':
  # calculates molarity, ask for moles and volume
  
  
  # figure out way to incorporate grams/molar mass
  
  
  moles = eval(input("Enter mole value: "))
  print("")
  volume = eval(input("Enter volume in liters: "))
  
  molarity = (moles / volume)
  print("")
  print("The molarity is:", molarity, "M")

elif userInput ==2:
  # calculates moles, ask for molarity and volume
  
  molarity = eval(input("Enter molarity value: "))
  print("")
  volume = eval(input("Enter volume in liters: "))
  print("")
  
  moles = molarity * volume
  print("")
  print("The mole value is:", moles, "mol")
  
elif userInput == 3:
  # calculates volume, ask for molairty and moles
  
  molarity = eval(input("Enter molarity value: "))
  print("")
  moles = eval(input("Enter mole value: "))
  print("")
  
  volume = molarity / moles
  print("")
  print("The volume is:" volume, "L")
  
else:
  
